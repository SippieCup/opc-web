<div class="documentation">
  <div class="guide">
    <div class="actions btn-toolbar">
      <div class="btn-group">
        <%=admin_link_to("Edit", admin: :guides, action: :edit, params: { id: instance.slug }, class: "btn btn-default")%>
      </div>
    </div>
    <div class="author-box">
      <div class="image">
      <% if instance.author_name.present? %>
        <span class="img"></span>
      <% else %>
        <%if instance.user.present? && instance.user.avatar.attached? %>
          <span class="img" style="background-image:url(<%=instance.user.avatar.service_url%>)"></span>
        <% end %>
      <% end %>
      </div>
      <div class="details">
        <div class="detail-inner">
          <div class="author-name">
            <% if instance.author_name.present? %>
              <%=instance.author_name%>
            <% else %>
              <%=instance.user.github_username %>
            <% end %>
          </div>
          <div class="meta">
            <span class="date"><%=instance.friendly_date%></span><span class="divider">&middot;</span><span class="reading_time"><%=instance.reading_time%> min read</span>
          </div>
        </div>
      </div>
    </div>
    <h1><%=instance.title%></h1>

    <div class="content">
    <%=instance.markup.html_safe%>
    </div>

    
  </div>
  <div class="responses">
    <h4>Responses</h4>
    <%= commontator_thread(instance) %>
  </div>
</div>